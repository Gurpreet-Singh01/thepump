@model ThePump.Models.AddData

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>AddData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentBodyWeight" class="control-label"></label>
                <input asp-for="CurrentBodyWeight" class="form-control" />
                <span asp-validation-for="CurrentBodyWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredBodyWeight" class="control-label"></label>
                <input asp-for="RequiredBodyWeight" class="form-control" />
                <span asp-validation-for="RequiredBodyWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfExercise" class="control-label"></label>
                <input asp-for="TypeOfExercise" class="form-control" />
                <span asp-validation-for="TypeOfExercise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalId" class="control-label"></label>
                <select asp-for="GoalId" class ="form-control" asp-items="ViewBag.GoalId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
