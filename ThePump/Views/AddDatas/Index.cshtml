@model IEnumerable<ThePump.Models.AddData>

@{
    ViewData["Title"] = "Goals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Goals</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table sortable table-striped table-hover">
    <thead>
        <tr>
            <th>
                < a href ="#">@Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                < a href ="#">@Html.DisplayNameFor(model => model.CurrentBodyWeight)
            </th>
            <th>
                < a href ="#">@Html.DisplayNameFor(model => model.RequiredBodyWeight)
            </th>
            <th>
                < a href ="#">@Html.DisplayNameFor(model => model.TypeOfExercise)
            </th>
            <th>
                < a href ="#">@Html.DisplayNameFor(model => model.Goal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentBodyWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredBodyWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfExercise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goal.FitnessGoal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
